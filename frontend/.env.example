# BlockDAG Scan++ Environment Variables

# Next.js Configuration
NEXT_PUBLIC_APP_NAME="BlockDAG Scan++"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# BlockDAG Network Configuration
NEXT_PUBLIC_BLOCKDAG_RPC_URL="https://rpc.blockdag.network"
NEXT_PUBLIC_BLOCKDAG_CHAIN_ID="1234"
NEXT_PUBLIC_BLOCKDAG_EXPLORER_API="https://api.blockdag.network"

# WalletConnect Configuration
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="431622ad75fa75a094312dee397f73d9"

# API Configuration
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"
API_SECRET_KEY="your_secret_key_here"

# Database Configuration (if using database)
DATABASE_URL="postgresql://user:password@localhost:5432/blockdag_scan"

# Redis Configuration (for caching)
REDIS_URL="redis://localhost:6379"

# Analytics Configuration
NEXT_PUBLIC_ANALYTICS_ENABLED="true"
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG_MODE="false"
NEXT_PUBLIC_ENABLE_PLUGIN_SYSTEM="true"
NEXT_PUBLIC_ENABLE_WALLET_MONITORING="true"
NEXT_PUBLIC_ENABLE_CONTRACT_DIFF="true"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_REQUESTS_PER_HOUR="1000"

# Monitoring & Logging
SENTRY_DSN="your_sentry_dsn_here"
LOG_LEVEL="info"

# External Services
ETHERSCAN_API_KEY="your_etherscan_api_key"
INFURA_PROJECT_ID="0daab4ce1f7e48059d4a1583986646b7"
ALCHEMY_API_KEY="your_alchemy_api_key"

# Plugin System
PLUGIN_REGISTRY_URL="https://plugins.blockdag.network"
PLUGIN_VERIFICATION_ENABLED="true"

# Security
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"
JWT_SECRET="your_jwt_secret_here"
ENCRYPTION_KEY="your_encryption_key_here"
